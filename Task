<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Show <a> tag after delay</title>
<style>
  /* Optional CSS for hiding the <a> tag initially */
  #myLink {
    display: none;
  }
</style>
</head>
<body>
  <!-- Placeholder text to show before displaying the <a> tag -->
  <p>Loading...</p>
  
  <!-- The <a> tag that will be displayed after a delay -->
  <a id="myLink" href="#">Click me!</a>

  <script>
    // Function to show the <a> tag after 15 seconds
    function showLink() {
      document.getElementById('myLink').style.display = 'inline'; // Display the <a> tag
      localStorage.setItem('linkShownTime', Date.now()); // Store current timestamp in localStorage
    }

    // Check if the link was shown less than 15 seconds ago
    const linkShownTime = localStorage.getItem('linkShownTime');
    const currentTime = Date.now();
    const delay = 15000;

    if (!linkShownTime || (currentTime - linkShownTime > delay)) {
      setTimeout(showLink, delay);
    } else {
      // If less than 15 seconds have passed since last show, display immediately
      document.getElementById('myLink').style.display = 'inline';
    }
  </script>
</body>
</html>