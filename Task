<?php
session_start();
include("server.php");
 

 if(isset($_GET['ref']))
 {
      $ref=$_GET['ref'];
        $sql = "SELECT * FROM signup WHERE username = '$ref'";
        $result = $conn->query($sql);
        if($result)
        {
               $row = $result->fetch_assoc();
               $level1=$row['id'];
               $level3=$row['leveltwo'];
               $level2=$row['upline'];
               //echo $level1;
        }
 }

 

 
if(isset($_POST['submit']))
{
       $name = $_POST['name'];
       $username =trim($_POST['username']);
       $country=$_POST['country'];
       $phone = $_POST['phone'];
       $password =$_POST['password'];
       $cpassword =$_POST['password'];
       $email = $_POST['email'];
    
       

       $sql = "select *from signup where username='$username'";
       $result = mysqli_query($conn, $sql);
       $count_user = mysqli_num_rows($result);

      

       $sql = "select *from users where phone='$phone'";
       $result = mysqli_query($conn, $sql);
       $count_phone = mysqli_num_rows($result);

       $sql = "select *from signup where phone='$phone'";
       $result = mysqli_query($conn, $sql);
       $count_phon = mysqli_num_rows($result);

       $sql = "select *from signup where email='$email'";
       $result = mysqli_query($conn, $sql);
       $count_email = mysqli_num_rows($result);





       if($count_user==0  & $count_phone==0 & $count_phon==0 & $count_email==0)
       {
         if($password==$cpassword)
         {
              $upline =$_SESSION['userId'];
            
              $sql = "INSERT INTO users(name, username,phone,country)VALUES('$name','$username','$phone','$country')";
              $result = mysqli_query($conn, $sql);

              if($result)
              {
                 $sql = "SELECT * FROM users WHERE phone = '$phone'";
                 $result = mysqli_query($conn,$sql);

               if ($result)
               { 
                 $row = $result->fetch_assoc();
                 $phonenumber=$row['phone'];
                 $country=$row['country'];
                 if($country=='Kenya')
                 {
                            $code=254;
