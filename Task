               $phon=$code.$phonenumber;
               
               $sql = "INSERT INTO signup(name, username,upline,upname,leveltwo,levelth,phone,country,email,password)VALUES('$name','$username','$level1','$ref','$level2','$level3','$phon','$country','$email','$password')";
