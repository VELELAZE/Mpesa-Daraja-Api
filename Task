<?php
session_start();
include("server.php");
 

 if(isset($_GET['ref']))
 {
      $ref=$_GET['ref'];
      $sql = "SELECT * FROM signup WHERE username = '$ref'";
        $result = $conn->query($sql);
        if($result)
        {
               $row = $result->fetch_assoc();
               $level1=$row['id'];
               $level3=$row['leveltwo'];
               $level2=$row['upline'];
        }

       
 }
 else{
       $ref="none";
       $sql = "SELECT * FROM signup WHERE username = '$ref'";
        $result = $conn->query($sql);
        if($result)
        {
               $row = $result->fetch_assoc();
               $level1=$row['id'];
               $level3=$row['leveltwo'];
               $level2=$row['upline'];
        }

 }

 

 
if(isset($_POST['submit']))
{
       $name = $_POST['name'];
       $username =trim($_POST['username']);
       $country=$_POST['country'];
       $phone = $_POST['phone'];
       $password =$_POST['password'];
       $cpassword=$_POST['password2'];
       $email = $_POST['email'];
    
       

       $sql = "select *from signup where username='$username'";
       $result = mysqli_query($conn, $sql);
       $count_user = mysqli_num_rows($result);

      

       $sql = "select *from users where phone='$phone'";
       $result = mysqli_query($conn, $sql);
       $count_phone = mysqli_num_rows($result);

       $sql = "select *from signup where phone='$phone'";
       $result = mysqli_query($conn, $sql);
       $count_phon = mysqli_num_rows($result);

       $sql = "select *from signup where email='$email'";
       $result = mysqli_query($conn, $sql);
       $count_email = mysqli_num_rows($result);





       if($count_user==0  & $count_phone==0 & $count_phon==0 & $count_email==0)
       {
         if($password==$cpassword)
         {
              $upline =$_SESSION['userId'];
             
              $hash = password_hash($password,PASSWORD_DEFAULT);
             
              $sql = "INSERT INTO users(name, username,phone,country)VALUES('$name','$username','$phone','$country')";
              $result = mysqli_query($conn, $sql);

              if($result)
              {
                 $sql = "SELECT * FROM users WHERE phone = '$phone'";
                 $result = mysqli_query($conn,$sql);

               if ($result)
               { 
                 $row = $result->fetch_assoc();
                 $phonenumber=$row['phone'];
                 $country=$row['country'];
                 if($country=='Kenya')
                 {
                            $code=254;
                 }
                 else
                 {
                     if($country=='Uganda')
                     {
                            $code=256;
                     }
                     if($country=='Ghana')
                     {
                            $code=233;
                     }
                     if($country=='Nigeria')
                     {
                            $code=234;
                     }
                 }

               $phon=$code.$phonenumber;
               
               $sql = "INSERT INTO signup(name, username,upline,upname,leveltwo,levelth,phone,country,email,password)VALUES('$name','$username','$level1','$ref','$level2','$level3','$phon','$country','$email','$password')";
               $result=mysqli_query($conn,$sql);
                     if($result)
                     {
                            
                     header("location:index.php");

                     }
                     
                    
                     }
              
                   
              }
         }
         else{
              $_SESSION['error']="Passwords Mismatch";
               
         }
       }


       else{
              if($count_user>0)
              {
                      
                   $_SESSION['error']="Username already exists";
                     
              }
       
              if($count_phone>0 || $count_phon>0)
              {
                     $_SESSION['error']="Phone number already exists";
              }
              if($count_email>0)
              {
                     $_SESSION['error']="Email address already exists";
                     
              }
       }

}


