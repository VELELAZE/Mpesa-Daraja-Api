    $records = $conn->query("SELECT * FROM signup WHERE status = 'inactive'");
    
   
}


$nr_of_rows = $records->num_rows;
$pages = ceil($nr_of_rows / $rows_per_page);

if (isset($_GET['page-nr'])) {
    $page = $_GET['page-nr'] - 1;
    $start = $page * $rows_per_page;
} else {
    $page = 0;
}









