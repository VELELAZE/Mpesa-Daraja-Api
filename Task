function convertToStandardForm($input) {
    // Convert input to float to handle decimal numbers
    $input = floatval($input);
    
    // Initialize variables for coefficient and exponent
    $coefficient = $input;
    $exponent = 0;
    
    // Reduce the number to a range between 1 and 10
    while ($coefficient >= 10 || $coefficient < 1) {
        if ($coefficient >= 10) {
            $coefficient /= 10;
            $exponent++;
        } elseif ($coefficient < 1) {
            $coefficient *= 10;
            $exponent--;
        }
    }
    
    // Determine the multiplier for the exponent
    $multiplier = pow(10, $exponent);
    
    return array('coefficient' => $coefficient, 'multiplier' => $multiplier);
}

// Example usage:
$input = 3000;
$result = convertToStandardForm($input);

$coefficient = $result['coefficient'];
$multiplier = $result['multiplier'];

echo "Coefficient: " . $coefficient . "\n";
echo "Multiplier: " . $multiplier . "\n";

// Output:
// Coefficient: 3
// Multiplier: 1000