function sendMail($recipientEmail, $recipientName, $subject, $body) {
    $mail = new PHPMailer;
    $mail->isSMTP();
    $mail->Host = 'smtp.gmail.com';
    $mail->SMTPAuth = true;
    $mail->Username = 'pesahelaonline@gmail.com';
    $mail->Password = 'newnljievgivqpln';
    $mail->SMTPSecure = 'ssl';
    $mail->Port = 465;
    $mail->setFrom('pesahelaonline@gmail.com', 'SUPERQASH AGENCIES');
    $mail->addAddress($recipientEmail, $recipientName);
    $mail->isHTML(true);
    $mail->Subject = $subject;
    $mail->Body = $body;
    $mail->AltBody = strip_tags($body); // Adding plain text alternative

    // SPF, DKIM, and DMARC setup in your domain's DNS
    // Example for DKIM setup with PHPMailer
    $mail->DKIM_domain = 'yourdomain.com';
    $mail->DKIM_private = 'path_to_your_private_key';
    $mail->DKIM_selector = 'default';
    $mail->DKIM_passphrase = '';
    $mail->DKIM_identity = $mail->From;

    if (!$mail->send()) {
        // Handle error
        error_log('Mailer Error: ' . $mail->ErrorInfo);
    } else {
        // Handle success
    }
}