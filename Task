$start = 0;
$rows_per_page = 5;

$search = '';
if (isset($_GET['search'])) {
    $search = $_GET['search'];

    $records = $conn->query("SELECT * FROM signup WHERE status = 'inactive' AND username LIKE '%$search%'");
} else {
    $records = $conn->query("SELECT * FROM signup WHERE status = 'inactive'");
   
}

 $nr_of_rows = $records->num_rows;
$pages = ceil($nr_of_rows / $rows_per_page);

if (isset($_GET['page-nr'])) {
    $page = $_GET['page-nr'] - 1;
    $start = $page * $rows_per_page;
} else {
    $page = 0;
}


// Check if there's a search query
$search_query = '';
if (isset($_GET['member'])) {
    $search_query = $_GET['member'];
    $records = $conn->query("SELECT * FROM signup WHERE status = 'active' AND username LIKE '%$search_query%'");
} else {
    $records = $conn->query("SELECT * FROM signup WHERE status = 'active'");
}

$nr_of_rows = $records->num_rows;
$pages = ceil($nr_of_rows / $rows_per_page);

if (isset($_GET['page-nr'])) {
    $page = $_GET['page-nr'] - 1;
    $start = $page * $rows_per_page;
} else {
    $page = 0;
}


// Check if there's a search query
$money = '';
if (isset($_GET['money'])) {
    $money = $_GET['money'];
    $records = $conn->query("SELECT * FROM wallet WHERE status = 'pending' AND username LIKE '%$money%'");
} else {
    $records = $conn->query("SELECT * FROM wallet WHERE status = 'pending'");
}

$nr_of_rows = $records->num_rows;
$pages = ceil($nr_of_rows / $rows_per_page);

if (isset($_GET['page-nr'])) {
    $page = $_GET['page-nr'] - 1;
    $start = $page * $rows_per_page;
} else {
    $page = 0;
}





//no of active users
$sql = "SELECT COUNT(*) AS active FROM signup WHERE status = 'active'";
$result = mysqli_query($conn,$sql);
if($result)
{
  $row = $result->fetch_assoc();
  $active = $row['active'];
  
}
//no of inactive users
$sql = "SELECT COUNT(*) AS inactive FROM signup WHERE status = 'inactive'";
$result = mysqli_query($conn,$sql);
if($result)
{
  $row = $result->fetch_assoc();
  $inactive = $row['inactive'];
  
}
//no of withdrawal requests
$sql = "SELECT COUNT(*) AS pay FROM wallet WHERE status = 'pending'";
$result = mysqli_query($conn,$sql);
if($result)
{
  $row = $result->fetch_assoc();
  $pay = $row['pay'];
  if($pay>0)
  {
    $withdrawals=number_format($pay). " Users";
  }
  else
  {
    $withdrawals = "No data";
  }
  
}



$sql = "SELECT * FROM signup WHERE username = 'Davkay'";
$result = mysqli_query($conn,$sql);
if($result)
{
  $row = $result->fetch_assoc();
  $davkay_balance = $row['balance'];
  //echo $davkay_balance;
}

$sql = "SELECT SUM(balance) AS total_profit FROM signup";
$result = mysqli_query($conn,$sql);
if($result->num_rows>0)
{
    $row=$result->fetch_assoc();
    $total_profit = $row['total_profit'];
    //echo "Total Amount = ".$total_profit;
    $debt = $total_profit- $davkay_balance;
    
}
else{
    echo 0;
}


